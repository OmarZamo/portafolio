---
import { basics } from "@cv"
import Section from "@/components/Section.astro"
import Mail from "@/icons/Mail.astro"
import Phone from "@/icons/Phone.astro"
import X from "@/icons/X.astro"
import LinkedIn from "@/icons/LinkedIn.astro"
import GitHub from "@/icons/GitHub.astro"
import WorldMap from "@/icons/WorldMap.astro"
import type { SocialIcon } from "@/types"

const { name, label, image, location, profiles, phone, email } = basics
const { city, region } = location

const SOCIAL_ICONS: SocialIcon = {
  GitHub,
  LinkedIn,
}

const linkedInfo = profiles.find(({ network }) => network === "LinkedIn")
const linkedUrl = linkedInfo?.url

const printInfo = [email, phone, linkedUrl].filter(Boolean).join(" â€¢ ")
---
<style>
.hero-section {
  width: 100%;
  padding: 4rem 2rem;
  background-color: var(--bg);
}

.hero-card {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  gap: 3rem;
  width: 100%;
  /* ðŸ‘‡ Elimina centrado si aÃºn existe */
  max-width: none;
  margin: 0;
}


.hero-card .card {
  flex: 1 1 80%;
  padding-right: 1.5rem;
  max-width: none; 
}

.hero-card h1 {
  font-size: 5rem;
  color: var(--primary);
  margin-bottom: 1rem;
}

.hero-card h2 {
  font-size: 2.8rem;
  font-weight: normal;
  color: var(--accent);
  margin-bottom: 3rem;
}

.hero-card span {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 3rem;
  font-weight: bold;
}

.hero-card footer.print,
.hero-card footer.no-print {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
  font-size: 0.95rem;
  align-items: center;
}

.contact-icon svg {
  width: 24px;
  height: 24px;
  fill: var(--accent);
  transition: transform 0.2s;
}

.contact-icon:hover svg {
  transform: scale(1.2);
  fill: var(--primary);
}

.hero-card figure {
  flex: 1 1 50%;
  display: flex;
  justify-content: center;
}

.hero-card figure img {
  width: 440px;
  height: 440px;
  object-fit: cover;
  border-radius: 50%;
  border: 4px solid var(--accent);
  box-shadow: 0 6px 18px rgba(0,0,0,0.1);
}

@media (max-width: 600px) {
    .hero-section {
      padding: 2rem 0.5rem;
    }
    .hero-card {
      flex-direction: column;
      gap: 1.5rem;
      align-items: stretch;
    }
    .hero-card .card {
      padding-right: 0;
      max-width: 100%;
    }
    .hero-card h1 {
      font-size: 2.2rem;
      margin-bottom: 0.5rem;
    }
    .hero-card h2 {
      font-size: 1.2rem;
      margin-bottom: 1.2rem;
    }
    .hero-card span {
      font-size: 1rem;
      margin-bottom: 1.2rem;
    }
    .hero-card footer.print,
    .hero-card footer.no-print {
      font-size: 0.9rem;
      gap: 0.5rem;
    }
    .hero-card figure {
      justify-content: center;
    }
    .hero-card figure img {
      width: 180px;
      height: 180px;
      border-width: 2px;
    }
  }
</style>

<Section class="hero-section full" id="personal">
  <div class="hero-card">
    <div class="card">
      <h1>{name}</h1>
      <h2>{label}</h2>
      <span>
        <WorldMap />
        {city}, {region}
      </span>

      <footer class="print">
        {printInfo}
      </footer>

      <footer class="no-print" style="padding-top: 30px;">
        {email && (
          <a href={`mailto:${email}`} class="contact-icon" target="_blank" rel="noopener noreferrer">
            <Mail />
          </a>
        )}
        {phone && (
          <a href={`tel:${phone}`} class="contact-icon" target="_blank" rel="noopener noreferrer">
            <Phone />
          </a>
        )}
        {profiles.map(({ network, url }) => {
          const Icon = SOCIAL_ICONS[network]
          return (
            <a href={url} class="contact-icon" target="_blank" rel="noopener noreferrer">
              <Icon />
            </a>
          )
        })}
      </footer>
    </div>

    <figure>
      <img src={image} alt={`Foto de ${name}`} />
    </figure>
  </div>
</Section>



