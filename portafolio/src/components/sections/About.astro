---
import Section from "../Section.astro"
import { basics } from "@cv"
import { Lightbulb } from "lucide-astro";

const { summary, quote, values, name, image } = basics
---

<Section class="about-section full">
  <div class="about-wrapper">
    <div class="about-card">
      <h3>¬øQui√©n soy?</h3>
      <p>{summary}</p>
    </div>
    <!-- üí¨ Cita personal -->
    <div class="about-block">
      <Lightbulb class="about-icon" />
      <blockquote class="about-quote">‚Äú{quote}‚Äù</blockquote>

        <ul class="value-list">
          {values.map(value => <li>{value}</li>)}
        </ul>
    </div>
  </div>
</Section>

<style>
.about-wrapper {
  display: flex;
  flex-direction: column;
  gap: 2rem;
  align-items: center;
  text-align: center;
}

@media (min-width: 900px) {
  .about-wrapper {
    flex-direction: row-reverse;
    justify-content: space-between;
    align-items: stretch; /* üëà fuerza que ambas tarjetas tengan la misma altura */
    text-align: left;
  }
}


.about-card,
.about-block {
  flex: 1 1 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}


.about-quote {
  font-style: italic;
  margin-bottom: 1rem;
  color: var(--primary);
}

.value-list {
  list-style: none;
  padding-left: 0;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}
.about-icon {
  width: 48px;
  height: 48px;
  color: var(--accent);
  margin-bottom: 1rem;
  opacity: 0.85;
}

.value-list li {
  padding: 0.4rem 0.6rem;
  border-left: 4px solid var(--accent);
  background-color: #f5faff;
  margin-bottom: 0.5rem;
  border-radius: var(--rounded);
}


.value-list li::before {
  content: "‚úîÔ∏è";
  margin-right: 0.5rem;
}
</style>

