---
// Recibe props
const { title, class: sectionClass = '' } = Astro.props
---

<section class={sectionClass}>
  {title && <h2>{title}</h2>}
  <slot />
</section>

<style>
  section:not(.hero-section):not(.full) {
    max-width: 700px;
    margin: 0 auto 48px;
  }

  h2 {
    margin-bottom: 8px;
    font-weight: 700;
    line-height: 1.5;
    font-size: 1.5rem;
  }

  @media (width <= 700px) {
    section:not(.hero-section):not(.full) {
      margin-bottom: 38px;
    }
  }
</style>

